package com.pedgog.web.pages;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

public class PedgogHomePage {

	WebDriver driver;

	@FindBy(xpath = "")
	WebElement explore;

	@FindBy(xpath = "")
	WebElement prepare;

	@FindBy(xpath = "")
	WebElement conduct;

	@FindBy(xpath = "")
	WebElement project;

	@FindBy(xpath = "")
	WebElement help;

	@FindBy(xpath = "//div[@class=\"last-div\"]//a[@href=\"/auth/logout\"]")
	WebElement logout;

	@FindBy(xpath = "//*[text()=\"Explore Zone\"]")
	WebElement homePageTtile;

	public PedgogHomePage(WebDriver driver) {
		this.driver = driver;
		PageFactory.initElements(driver, PedgogHomePage.class);
	}

	public void homePageTtile() {
		homePageTtile.getText();
	}

	public void gotoExplore() {
		explore.click();
	}

	public void gotoPrepare() {
		prepare.click();
	}

	public void gotoConduct() {
		conduct.click();
	}

	public void gotoProject() {
		project.click();
	}

	public void gotoHelp() {
		help.click();
	}

	public void logout() {
		logout.click();
	}

}
